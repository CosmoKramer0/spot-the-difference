generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  createdAt DateTime @default(now())
  
  gameSessions GameSession[]
  
  @@map("users")
}

model GameSession {
  id        String   @id @default(cuid())
  userId    String
  startTime DateTime @default(now())
  endTime   DateTime?
  score     Int?
  completed Boolean  @default(false)
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("game_sessions")
}

model IconSet {
  id          String @id @default(cuid())
  name        String
  description String?
  iconUrls    String // JSON array of icon URLs
  correctIcon Int    // Index of the different icon
  difficulty  Int    @default(1)
  isActive    Boolean @default(true)
  
  @@map("icon_sets")
}
